export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local
export SECRETS=$HOME/.secrets

export CLOUDSDK_CONFIG=$XDG_CONFIG_HOME
export KUBECONFIG=$XDG_CONFIG_HOME/kube

